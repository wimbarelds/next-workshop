{
  "ts-node": {
    "esm": true,
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "lib": ["es2021"],
    "allowImportingTsExtensions": true,
  },
}
